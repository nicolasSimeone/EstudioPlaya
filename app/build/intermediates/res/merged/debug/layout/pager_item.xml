<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="256dp"
        android:layout_height="116dp"
        android:id="@+id/imgImagenPrograma"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/programa_0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp" />

    <TextView
        android:layout_width="256dp"
        android:layout_height="16dp"
        android:id="@+id/txtTitulo"
        app:layout_constraintLeft_toLeftOf="@+id/imgImagenPrograma"
        app:layout_constraintBottom_toTopOf="@+id/imgImagenPrograma"
        tools:text="@string/titulo1"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:layout_marginBottom="4dp" />

    <TextView
        android:text="@string/descripcion0"
        android:layout_width="252dp"
        android:layout_height="30dp"
        android:id="@+id/txtDescripcion"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/imgImagenPrograma"
        app:layout_constraintTop_toBottomOf="@+id/imgImagenPrograma"
        tools:ignore="SmallSp"
        android:textAlignment="center" />

</android.support.constraint.ConstraintLayout>
