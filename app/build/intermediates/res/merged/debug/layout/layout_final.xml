<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <pl.droidsonroids.gif.GifTextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/movistar_banner"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/imgEstudioLogo"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/play_button_black"
        android:id="@+id/imgPlayStop"
        android:background="@null"
        android:contentDescription="@string/play"
        android:visibility="visible"
        android:scaleType="fitXY"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtCargando"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="@+id/txtCargando"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="2dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/facebook_black_icon"
        android:id="@+id/imgFacebook"
        android:background="@null"
        android:contentDescription="@string/facebook"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/imgTwitter"
        android:layout_marginStart="96dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="96dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/twitter_black_icon"
        android:id="@+id/imgTwitter"
        android:scaleType="fitXY"
        android:background="@null"
        android:contentDescription="@string/twitter"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/imgInstagram"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/imgInstagram"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imgFacebook"
        android:layout_marginLeft="8dp" />

    <ImageButton
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/instagram_black_icon"
        android:id="@+id/imgInstagram"
        android:scaleType="fitXY"
        android:background="@null"
        android:contentDescription="@string/instagram"
        android:layout_height="44dp"
        android:layout_marginEnd="88dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="@string/programaci_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtProgramacion"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="@android:color/black"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/estudio_playa_logo_stroke"
        android:id="@+id/imgEstudioLogo"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:scaleType="fitXY"
        android:background="@null"
        android:contentDescription="" />

    <TextView
        android:text="@string/en_vivo_desde_pinamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="12sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPrograma"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txtPrograma"
        android:layout_marginLeft="24dp"
        app:layout_constraintRight_toRightOf="@+id/txtPrograma"
        app:layout_constraintHorizontal_bias="0.17" />

    <TextView
        android:text="@string/program_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPrograma"
        android:textSize="22sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="96dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/imgEstudioLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/imgEstudioLogo"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.55"
        android:visibility="invisible"
        android:contentDescription="EstudioPlaya 98.1" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="311dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="311dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/powered_by_nupa"
        android:id="@+id/imgNupa"
        android:background="@null"
        android:scaleType="fitXY"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pager"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/imgTwitter"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="@+id/imgTwitter"
        app:layout_constraintBottom_toBottomOf="@+id/imgTwitter"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/imgFacebook"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_bias="0.65999997"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/txtProgramacion">
    </android.support.v4.view.ViewPager>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_bar"
        android:id="@+id/imageView"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="@string/cargando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCargando"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtProgramacion"
        android:layout_marginEnd="28dp"
        app:layout_constraintRight_toRightOf="@+id/txtProgramacion"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="28dp" />


</android.support.constraint.ConstraintLayout>
